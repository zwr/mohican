%h1 Listing orders

%table
  %thead
    %tr
      %th Order number
      %th Creator
      %th Status
      %th Total
      %th Items
      %th
      %th
      %th
      
  %tbody
    - @orders.each do |order|
      %tr
        %td= order.order_number
        %td= order.creator.name
        %td= order.status
        %td= order.total
        %td= order.items
        %td= link_to 'Show', order
        %td= link_to 'Edit', edit_order_path(order)
        %td= link_to 'Destroy', order, :method => :delete, :data => { :confirm => 'Are you sure?' }

