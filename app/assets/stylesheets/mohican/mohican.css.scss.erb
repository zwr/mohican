@import "config";
// @import "config_c5a";
@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome-sprockets";
@import "font-awesome";
@import "rails_bootstrap_forms";
@import "includes/angular-multi-select";
@import "includes/daterangepicker-bs3";
@import "includes/css-spinner";
@import "includes/animate";

@media(max-width: $grid-float-breakpoint - 1 /*767px*/) {
  .navbar-text {
    margin-top: 10px;
  }
  .navbar-toggle {
    margin-left: 16px;
  }
  .navbar-nav {
    margin-top: 5px;
    margin-bottom: 0px;
  }
}

@media(max-width: $app-hide-title) {
  .mn-navbar-title > a {
    width: 5px;
    img {
      display: none;
    }
  }
}

body {
  background: $mn-body-bg !important;
}

.mn-navbar-title {
  height: 50px;
  display: inline;
  padding-left: 15px;
}

a.navbar-brand {
  margin-top: $mn-brand-mgTop;
  width:$mn-brand-width;
  height:$mn-brand-height;
  background:$mn-brand-bg;
  background-size: contain;
}

a.navbar-brand.active, a.navbar-brand:focus {
  outline:none !important;
  box-shadow:none;
  cursor:default;
}

.navbar-static-top, .navbar-inverse {
  background: linear-gradient(rgba(0,0,0,1), rgba(0,0,0,0)) !important;
  // -webkit-box-shadow: -1px 0px 19px #0A1D42;
  // -moz-box-shadow: -1px 0px 19px #0A1D42;
  // box-shadow: -1px 0px 19px #0A1D42;
}

.navbar-inverse {
  border:0 !important;
}

.filterRowAnimWrap.ng-hide-add,
.filterRowAnimWrap.ng-hide-remove {
  transition:1.0s linear all;
  display:block !important;
  opacity:1;
  transform: scale(1);
}

.filterRowAnimWrap.ng-hide {
  opacity:0;
  transform: scale(0.2);
}

.filterRowAnimWrap input[type="text"] {
    background-color: transparent;
    border-bottom: 2px solid #004d40;
    border-right: 0;
    border-left:0;
    border-top:0;
    border-radius: 0px !important;
    outline: none;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    cursor:default;
    -webkit-appearance:none;
    -moz-appearance:none;
    appearance:none;
}

.mn-select-filter button {
  max-height: 34px !important;
  max-width: 100px;
  width: 92px;
  height: 34px;
  display: block;
  overflow: hidden;
}

.filter-bar-dropDown button, .QfRow button {
  background-color: $mn-filter-bar-dropDown-background-color;
  border-radius: 3px;
  border:0;
  box-shadow: 2px 2px #006064;
  -webkit-box-shadow: 2px 2px #006064;
  -moz-box-shadow: 2px 2px #006064;
}

.filter-bar-dropDown button {
  color: #b3e5fc;
}

.filter-bar-dropDown .multiSelect .multiSelectItem.selected:not(.multiSelectGroup) {
  background-image: linear-gradient($mn-colorscheme-1L, $mn-colorscheme-1P);
  color: #666;
  border: 0 !important;
}

.filter-bar-dropDown .multiSelect .multiSelectItem:hover, .filter-bar-dropDown .multiSelect .multiSelectGroup:hover {
  background-image: linear-gradient($mn-colorscheme-1D, $mn-colorscheme-1M) !important;
  border: 0 !important;
}

.QfRow button {
  background: $mn-colorscheme-2L;
  padding: 3px 1px 2px 3px !important;
  height:auto !important;
}

.QfRow .multiSelect .multiSelectItem.selected:not(.multiSelectGroup) {
  background-image: linear-gradient($mn-colorscheme-2M, $mn-colorscheme-2L) !important;
  border: 0 !important;
}

.QfRow .multiSelect .multiSelectItem:hover, .QfRow .multiSelect .multiSelectGroup:hover {
  background-image: linear-gradient($mn-colorscheme-2V, $mn-colorscheme-2D) !important;
  border: 0 !important;
}

.multiSelect .buttonLabel {
  padding: $mn-button-label-pad !important;
  font-weight: 400;
}

mn-grid th {
  border-style: solid !important;
  border-width: 1px !important;
  border-color: #aaa !important;
  color: #444 !important;
}

mn-grid th.mn-sortable {
  border-style: solid !important;
  border-width: 1px !important;
  border-color: black !important;
  color: #444 !important;
}

.mn-grid-layout-row { margin-top: $mn-grid-layout-row; }

mn-grid tr.last-selected {
  border-left-color: blue;
  border-left-style: solid;
  border-left-width: medium;
}

mnf-form input.changed {
  background-color: yellow;
}

mnf-form button {
  width: 84px;
}

mnf-form .mn-form-group {
  margin-bottom: 0px;
}
mnf-form .mn-form-control {
  font-size: 14px !important;
}

mn-menu-item-route > a > span {
  color: $mn-menu-item-route-color;
  text-decoration: none;
}

.filterBar {
  background:
    $mn-content-header-background bottom right,
    linear-gradient(135deg, transparent 10px, $mn-colorscheme-1M 0) top left;
  background-size: 100% 72%;
  background-repeat: no-repeat;
  padding: 7px;
}

.filter-bar-item {
  display: inline;
  float: left;
  clear: none;
  margin: 0px 7px 0px 7px;
  vertical-align: middle;
}

.filter-bar-alert {
  padding: 4px 4px 4px 4px;
}

.filter-bar-button.active {
  background: $mn-grid-header-container-bg;
  border: 2px solid $mn-filter-bar-button-brdr-color;
  color: $mn-filter-bar-button-active-text-color;
  font-weight: 500;
}

.filter-bar-button.active, .filter-bar-button:focus, .QfRow button.active, .QfRow button:focus {
// removing webkit active & focus markup
  outline:none !important;
  box-shadow:none;
  cursor:default;
}

.filter-bar-item span.multiSelect > button {
  width: 140px;
}

.filter-bar-dropDown button .buttonLabel span.caret {
  position: relative;
}

.filter-bar-dropDown button .buttonLabel span.caret::after {
  content: ' ';
  position: absolute;
  left: -5px;
  top:-5px;
  border: 6px solid transparent;
  border-top: 6px solid #fff;
}

.QfRow, .table > thead > tr th.QfRow {
  background: $mn-qfilter-subheader-background;
  padding: 5px !important;
  border: 0 !important;
  vertical-align: middle;
}

mn-menu-item-route > a:not(.mn-menu-item-route-active) > span:hover,
mn-menu-group > li > a:hover,
mn-menu-item-route > a:hover {
  color: $mn-menu-item-route-hover-color;
  text-decoration: none;
}
mn-menu-group-item > li > mn-menu-item-route > a > span:hover,
mn-menu-group-item > li > mn-menu-item-route > a:not(.mn-menu-item-route-active) > span:hover {
  color: $mn-menu-item-route-color;
  text-decoration: none;
}

a.mn-menu-item-route-active span,
a.mn-menu-item-route-active span:focus,
a.mn-menu-item-route-active:focus {
  color: $mn-menu-item-route-active-color;
  text-decoration: none;
}

.nav,
.carousel,
.panel-title a,
.pointer,
[ng-click],
[data-ng-click],
[x-ng-click] {
    cursor: pointer;
}

mn-menu-group > li {
  float: left;
}

mn-menu-group > li > a {
  color: #777777;
  padding-top: 15px;
  line-height: 20px;
  box-sizing: border-box;
  position: relative;
  display: block;
  padding: 15px;
  list-style-position: outside;
  text-decoration: none;
}

mn-menu-group > li > .dropdown-menu {
  margin-top: 0;
  border-top-right-radius: 0;
  border-top-left-radius: 0;
}

.dropdown-menu .divider {
  height: 1px;
  margin: 9px 0;
  overflow: hidden;
  background-color: #e5e5e5;
}

mn-menu-group-item > li {
  display: block;
  padding: 3px 20px;
  clear: both;
  font-weight: normal;
  line-height: 1.428571429;
  color: #333333;
  white-space: nowrap;
}

mn-navbar-right mn-menu-item {
  position: relative;
  display: block;
  float: left !important;
}

mn-navbar-right mn-menu-item li.navbar-text,
mn-navbar-right mn-menu-group li.navbar-text{
  margin-left: 0px;
  margin-right: 0px;
  padding-left: 15px;
  padding-right: 15px;
}

.navbar-nav {
  margin-left: 20px;
  padding-left: 10px;
  // border: #666 1px solid;
  // background: rgba(#000,.3);
  // background:
  //       linear-gradient(45deg, transparent 10px, rgba(#000,.3) 10px),
  //       linear-gradient(315deg, transparent 10px, rgba(#000,.3) 10px);
  // background-position: bottom left, bottom right;
  //   -moz-background-size: 50% 50%;
  //   -webkit-background-size: 50% 50%;
  //   background-size: 50% 50%;
  //   background-repeat: no-repeat;
}

mn-menu-group-item > li:hover, mn-menu-group-item > li:focus {
  text-decoration: none;
  color: #262626;
  background-color: whitesmoke;
}

mn-menu-group > li > a:focus, .nav .open > a, .nav .open > a:hover, .nav .open > a:focus {
  background-color: #090909;
  color: white;
}

.nav-tabs li a {
  background:
    $mn-tab-passive-bg bottom right,
    linear-gradient(135deg, transparent 10px, $mn-colorscheme-1L 0) top left;
  background-size: 100% 60%;
  background-repeat: no-repeat;
  padding-left: 18px !important;
  margin-top: 8px !important;
  margin-right: 0px !important;
  color: #fff;
}

.nav-tabs li a:focus, .nav-tabs li a.active, .nav-tabs li a:active  {
  background:
    $mn-tab-active-bg bottom right,
    linear-gradient(135deg, transparent 10px, #dedede 0) top left !important;
  background-size: 100% 60% !important;
  background-repeat: no-repeat !important;
  color: $mn-colorscheme-1V !important;
  border-radius: 0 !important;
  border: 0 !important;
  outline:none !important;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  cursor:default;
  -webkit-appearance:none;
  -moz-appearance:none;
  appearance:none;
}

mn-item-reports > div, .block {
  display: block !important;
}

.icoNormal {
  color: $mn-filter-bar-button-active-text-color !important;
  padding: 0px 1px 0px 1px;
}

.icoNormal:hover, .icoNormal:active {
  color: #999 !important;
}

.hvRed:hover, .hvRed:active {
  color: #e53935 !important;
}

.hvGreen:hover, .hvGreen:active {
  color: #2e7d32 !important;
}

.hvBlue:hover, .hvBlue:active {
  color: #0089E2 !important;
}

.collapse.in mn-menu-group, .collapse.in mn-menu-item,
.collapsing mn-menu-group, .collapsing mn-menu-item {
  clear: both;
  position: relative;
  display: block;
  box-sizing: border-box;
}

.collapsing mn-menu-group > li > a,
.collapse.in mn-menu-group > li > a {
  padding: 0px;
  padding-bottom: 15px;
}

.mn-context-menu {
  position: absolute;
  z-index:999999;
}

.mn-context-menu-cover {
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0);
  z-index:999998;
  cursor:default;
}

.mn-context-menu > .btn-default {
  color: $mn-popup-menu-color;
  border-color: $mn-popup-menu-border-color;
}

.mn-context-menu > .btn-default:hover {
  color: $mn-popup-menu-color-hover;
  background-color: $mn-popup-menu-background-color-hover;
  border-color: $mn-popup-menu-border-color-hover;
}

.mn-pager-row {
  padding-top: 7px;
  margin: 0 !important;
  background:
    $mn-content-footer-background top left,
    linear-gradient(315deg, transparent 10px, $mn-colorscheme-1L 0) bottom right;
  background-size: 100% 68%;
  background-repeat: no-repeat;
}

.mn-content-footer-status-msg {
  padding-right:42px;
  color:$mn-colorscheme-1P;
  font-size:24px;
  font-weight:bolder;
  vertical-align: bottom;
  text-align: right;
}

.mn-content-footer-status-msg-invert {
  color:$mn-colorscheme-1D;
}

.client-pager {
  border-color: $grid-client-pager-border-color;
  border-style: solid;
  border-width: 1px;
}

.grid-header-container  {
  padding: 4px;
  border-bottom: 0 ;
  border-right: 0 ;
  background: $mn-grid-header-container-bg;
  vertical-align: middle !important;
}

.grid-header-field-name {
  padding-left: 2px;
  display: inline !important;
  float: left;
  overflow: hidden;
}

.grid-header-field-dir {
  margin-right: 0px;
  display: inline !important;
  float: left;
}

.mn-context-menu {
  position: absolute;
  z-index:1999;
}

.mn-context-menu-cover, .mn-dialog-frame-cover {
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0);
  z-index:1998;
  cursor:default;
}

.mn-dialog-frame-cover {
  background:rgba(0,0,0,0.8);
}

.mn-dialog-frame {
  position:fixed;
  z-index:1999;
  // padding: 30px 45px;
  //margin: 30px;
  * {
    z-index:9999;
    position:relative;
  }
}

.mn-dialog-content {
  padding: 30px 45px;
}

.mn-dialog-close-button {
  position:absolute;
  top:0px;
  right:0px;
  width:30px;
  height:30px;
  // margin-top: 10px;
  // margin-right: 10px;
  color: silver;
  z-index:2999;
}

.mn-context-menu > .btn-default {
  color: $mn-popup-menu-color;
  background-color: $mn-popup-menu-background-color;
