@import "config";
@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome-sprockets";
@import "font-awesome";
@import "rails_bootstrap_forms";
@import "includes/angular-multi-select";
@import "includes/daterangepicker-bs3";
@import "includes/css-spinner";
@import "includes/ng-dialog";
@import "includes/ng-dialog-theme-default";
@import "includes/animate";

@media(max-width: $grid-float-breakpoint - 1 /*767px*/) {
  .navbar-text {
    margin-top: 10px;
  }
  .navbar-toggle {
    margin-left: 16px;
  }
  .navbar-nav {
    margin-top: 5px;
    margin-bottom: 0px;
  }
}

.mn-navbar-title {
  height: 50px;
  display: inline;
}

.navbar-brand {
  padding-top: 2px;
}

@media(max-width: $app-hide-title) {
  .mn-navbar-title > a {
    width: 5px;
    img {
      display: none;
    }
  }
}

.filterRowAnimWrap.ng-hide-add,
.filterRowAnimWrap.ng-hide-remove {
  transition:1.0s linear all;
  display:block !important;
  opacity:1;
  transform: scale(1);
}

.filterRowAnimWrap.ng-hide {
  opacity:0;
  transform: scale(0.2);
}

.filterRowAnimWrap input[type="text"] {
    background-color: transparent;
    border-bottom: 2px solid #004d40;
    border-right: 0;
    border-left:0;
    border-top:0;
    border-radius: 0px !important;
    outline: none;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    cursor:default;
    -webkit-appearance:none;
    -moz-appearance:none;
    appearance:none;
}

.mn-select-filter button {
  max-height: 34px !important;
  max-width: 100px;
  width: 100px;
  height: 34px;
  display: block;
  overflow: hidden;
}

.filter-bar-dropDown button, .QfRow button {
  background: #039be5;
  border-radius: 3px;
  border:0;
  box-shadow: 2px 2px #006064;
  -webkit-box-shadow: 2px 2px #006064;
  -moz-box-shadow: 2px 2px #006064;
}

.filter-bar-dropDown button {
  color: #b3e5fc;
}

.QfRow button {
  background: #a5d6a7;
  padding: 3px 1px 2px 3px !important;
  height:auto !important;
}

.multiSelect .buttonLabel {
  padding: $mn-button-label-pad !important;
  font-weight: 400;
}

mn-grid th {
  border-style: solid !important;
  border-width: 1px !important;
  border-color: #aaa !important;
  color: #444 !important;
}

mn-grid th.mn-sortable {
  border-style: solid !important;
  border-width: 1px !important;
  border-color: black !important;
  color: #444 !important;
}

.mn-grid-layout-row { margin-top: $mn-grid-layout-row; }

[mn-full-height] {
  background: #e6e6e6 url($mn-mn-full-height-backbround-image) repeat-x;
}

[ui-view] {
  margin-left: 15px;
  margin-right: 15px;
}

mn-menu-item-route > a > span {
  color: $mn-menu-item-route-color;
  text-decoration: none;
}

.filterBar {
  background: $mn-content-header-background;
  background: -webkit-$mn-content-header-background;
  background:
    $mn-content-header-background bottom right,
    linear-gradient(135deg, transparent 10px, #36B7FF 0) top left;
  background-size: 100% 72%;
  background-repeat: no-repeat;
  padding: 7px;
}

.filter-bar-item {
  display: inline;
  float: left;
  clear: none;
  margin: 0px 7px 0px 7px;
  vertical-align: middle;
}

.filter-bar-alert {
  padding: 4px 4px 4px 4px;
}

.filter-bar-button.active {
  background: $mn-grid-header-container-bg;
  border: 2px solid $mn-filter-bar-button-brdr-color;
  color: $mn-filter-bar-button-active-text-color;
  font-weight: 500;
}

.filter-bar-button.active, .filter-bar-button:focus {
  outline:none !important;
  box-shadow:none;
  cursor:default;
}

.filter-bar-item span.multiSelect > button {
  width: 140px;
}

.filter-bar-dropDown button .buttonLabel span.caret {
  position: relative;
}

.filter-bar-dropDown button .buttonLabel span.caret::after {
  content: ' ';
  position: absolute;
  left: -5px;
  top:-5px;
  border: 6px solid transparent;
  border-top: 6px solid #fff;
}

.QfRow, .table > thead > tr th.QfRow {
  background: $mn-qfilter-subheader-background;
  padding: 5px !important;
  border: 0 !important;
  vertical-align: middle;
}

mn-menu-item-route > a:not(.mn-menu-item-route-active) > span:hover,
mn-menu-group > li > a:hover,
mn-menu-item-route > a:hover {
  color: $mn-menu-item-route-hover-color;
  text-decoration: none;
}
mn-menu-group-item > li > mn-menu-item-route > a > span:hover,
mn-menu-group-item > li > mn-menu-item-route > a:not(.mn-menu-item-route-active) > span:hover {
  color: $mn-menu-item-route-color;
  text-decoration: none;
}

a.mn-menu-item-route-active span,
a.mn-menu-item-route-active span:focus,
a.mn-menu-item-route-active:focus {
  color: $mn-menu-item-route-active-color;
  text-decoration: none;
}

.nav,
.pagination,
.carousel,
.panel-title a,
.pointer,
[ng-click],
[data-ng-click],
[x-ng-click] {
    cursor: pointer;
}

mn-menu-group > li {
  float: left;
}

mn-menu-group > li > a {
  color: #777777;
  padding-top: 15px;
  line-height: 20px;
  box-sizing: border-box;
  position: relative;
  display: block;
  padding: 15px;
  list-style-position: outside;
  text-decoration: none;
}

mn-menu-group > li > .dropdown-menu {
  margin-top: 0;
  border-top-right-radius: 0;
  border-top-left-radius: 0;
}

.dropdown-menu .divider {
  height: 1px;
  margin: 9px 0;
  overflow: hidden;
  background-color: #e5e5e5;
}

mn-menu-group-item > li {
  display: block;
  padding: 3px 20px;
  clear: both;
  font-weight: normal;
  line-height: 1.428571429;
  color: #333333;
  white-space: nowrap;
}

mn-navbar-right mn-menu-item {
  position: relative;
  display: block;
  float: left !important;
}

mn-navbar-right mn-menu-item li.navbar-text,
mn-navbar-right mn-menu-group li.navbar-text{
  margin-left: 0px;
  margin-right: 0px;
  padding-left: 15px;
  padding-right: 15px;
}

mn-menu-group-item > li:hover, mn-menu-group-item > li:focus {
  text-decoration: none;
  color: #262626;
  background-color: whitesmoke;
}

mn-menu-group > li > a:focus, .nav .open > a, .nav .open > a:hover, .nav .open > a:focus {
  background-color: #090909;
  color: white;
}

mn-item-reports > div {
  display: block !important;
}

.icoNormal {
  color: $mn-filter-bar-button-active-text-color !important;
  padding: 0px 1px 0px 1px;
}

.icoNormal:hover, .icoNormal:active {
  color: #999 !important;
}

.hvRed:hover, .hvRed:active {
  color: #e53935 !important;
}

.hvGreen:hover, .hvGreen:active {
  color: #2e7d32 !important;
}

.hvBlue:hover, .hvBlue:active {
  color: #0089E2 !important;
}

.collapse.in mn-menu-group, .collapse.in mn-menu-item,
.collapsing mn-menu-group, .collapsing mn-menu-item {
  clear: both;
  position: relative;
  display: block;
  box-sizing: border-box;
}

.collapsing mn-menu-group > li > a,
.collapse.in mn-menu-group > li > a {
  padding: 0px;
  padding-bottom: 15px;
}

.pager-row {
  padding-top: 12px;
}

.client-pager {
  border-color: $grid-client-pager-border-color;
  border-style: solid;
  border-width: 1px;
}

.grid-header-container  {
  padding: 4px;
  border-bottom: 0 ;
  border-right: 0 ;
  background: linear-gradient(#AEF6BF,#96D098);
  vertical-align: middle !important;
}

.grid-header-field-name {
  padding-left: 2px;
  display: inline !important;
  float: left;
  overflow: hidden;
}

.grid-header-field-dir {
  margin-right: 0px;
  display: inline !important;
  float: left;
}

//generic container styles

.scrollableHframe {
  background-color: $mn-content-container-bg-color;
  border:1px solid LightGray;
  box-shadow: 0px 0px 14px LightGray inset;
  -webkit-box-shadow: 0px 0px 14px LightGray inset;
  -moz-box-shadow: 0px 0px 14px LightGray inset;
  overflow:auto;
}

//generic modifier styles

// fix for inset shadow bug of the table-containing div, to be uniform on striped rows, because shadow is not visible on opaque background
.table-striped > tbody > tr:nth-child(odd) > td {
  background-color: rgba(#999, .1);
}

.table > thead > tr > th, .table > thead > tr > td,
.table > tbody > tr > th, .table > tbody > tr > td,
.table > tfoot > tr > th, .table > tfoot > tr > td {
  padding: 4px 4px;
}

.table > thead > tr > th {
  font-weight: 500 !important;
  font-size:$font-size-base - 1;
  border-color: #ACF3BC !important;
  border-top: 1px solid #fff !important;
}

.baseFont3x {
  font-size:$font-size-base * 3;
}

.noPad {
  padding:0 !important;
}

.vmiddle {
  vertical-align: middle !important;
}

.mn-context-menu {
  position: absolute;
  z-index:999999;
}

.mn-context-menu-cover {
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0);
  z-index:999998;
  cursor:default;
}
