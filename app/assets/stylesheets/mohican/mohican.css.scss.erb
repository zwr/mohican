.filterBar {
  background:
    $mn-content-header-background bottom right,
    linear-gradient(135deg, transparent 10px, $mn-colorscheme-1M 0) top left;
  background-size: 100% 72%;
  background-repeat: no-repeat;
  padding: 8px;
}

.filter-bar-item {
  display: inline;
  float: left;
  clear: none;
  margin: 0px 7px 0px 7px;
  vertical-align: middle;
}

.filter-bar-alert {
  padding: 4px 4px 4px 4px;
}

.filterBar .btn.active {
  background: $mn-grid-header-container-bg;
  color: $mn-filter-bar-button-active-text-color;
  font-weight: 500;
  -webkit-box-shadow: 0px 0px 4px $mn-colorscheme-2V inset;
  -moz-box-shadow: 0px 0px 4px $mn-colorscheme-2V inset;
  box-shadow: 2px 2px 5px $mn-colorscheme-2D inset !important;
}

.primary .multiSelect button {
  @include multi-select-reset-pbm(1,5);
  @include bs-btnize("primary");
}

.filter-bar-dropDown button .buttonLabel span.caret {
  position: relative;
}

.filter-bar-dropDown button .buttonLabel span.caret:after {
  content: ' ';
  position: absolute;
  left: -5px;
  top:-5px;
  border: 6px solid transparent;
  border-top: 6px solid #fff;
}

.qf-row, .table > thead > tr th.qf-row {
  padding: 2px 1px 4px 1px !important;
  border: none !important;
  vertical-align: middle;
}

.filterFieldBgWrap {
  position:relative;
  width:100%;
  z-index: 200;
}

._filterFieldBgWrap:after {
  font-family: "Glyphicons Halflings";
  content:"\e138";
  font-size: $font-size-base + 4;
  color: $mn-colorscheme-2M;
  vertical-align: middle;
  position: absolute;
  right: 0px;
  bottom: 2px;
  z-index: -1;
}

.disabled .filterFieldBgWrap:after {
  color: $mn-disabled-L;
}

