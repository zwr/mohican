.pointer,
[ng-click],
[data-ng-click],
[x-ng-click] {
    cursor: pointer;
}

mn-menu-group > li {
  float: left;
}

mn-menu-group > li > a {
  color: #777777;
  padding-top: 15px;
  line-height: 20px;
  box-sizing: border-box;
  position: relative;
  display: block;
  padding: 15px;
  list-style-position: outside;
  text-decoration: none;
}

mn-menu-group > li > .dropdown-menu {
  margin-top: 0;
  border-top-right-radius: 0;
  border-top-left-radius: 0;
}

.dropdown-menu .divider {
  height: 1px;
  margin: 9px 0;
  overflow: hidden;
  background-color: #e5e5e5;
}

mn-menu-group-item > li {
  display: block;
  padding: 3px 20px;
  clear: both;
  font-weight: normal;
  line-height: 1.428571429;
  color: #333333;
  white-space: nowrap;
}

mn-navbar-right mn-menu-item {
  position: relative;
  display: block;
  float: left !important;
}

mn-navbar-right mn-menu-item li.navbar-text,
mn-navbar-right mn-menu-group li.navbar-text{
  margin-left: 0px;
  margin-right: 0px;
  padding-left: 15px;
  padding-right: 15px;
}

mn-menu-group-item > li:hover, mn-menu-group-item > li:focus {
  text-decoration: none;
  color: #262626;
  background-color: whitesmoke;
}

mn-menu-group > li > a:focus, .nav .open > a, .nav .open > a:hover, .nav .open > a:focus {
  background:
        linear-gradient(45deg, transparent 10px, rgba(#000,.8) 10px),
        linear-gradient(315deg, transparent 10px, rgba(#000,.8) 10px) !important;
  background-position: bottom left, bottom right;
  -moz-background-size: 50% 50%;
  -webkit-background-size: 50% 50%;
  background-size: 50% 50%;
  background-repeat: no-repeat;
  color: white;
  padding-right: 1px;
  margin-right: 14px;
}

