}

.mn-context-menu > .btn-default:hover {
  color: $mn-popup-menu-color-hover;
  background-color: $mn-popup-menu-background-color-hover;
  border-color: $mn-popup-menu-border-color-hover;
}

//generic container styles

.scrollableHframe {
  background-color: $mn-content-container-bg-color;
  border:1px solid LightGray;
  box-shadow: 0px 0px 14px LightGray inset;
  -webkit-box-shadow: 0px 0px 14px LightGray inset;
  -moz-box-shadow: 0px 0px 14px LightGray inset;
  overflow:auto;
}

.mn-content-panel {
  background:
    linear-gradient(135deg, transparent 9px, $mn-content-panel-bg-color 0) top left,
    linear-gradient(315deg, transparent 9px, $mn-content-panel-bg-color 0) bottom right;
  background-size: 100% 72%;
  background-repeat: no-repeat;
  padding: 17px;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  overflow:hidden;
  border-top:9px solid transparent;
}

.mn-content-panel::before {
  content: ' ';
  position: absolute;
  left: 0px;
  top:0px;
  width: 13px;
  height: 13px;
  background:
    linear-gradient(135deg, transparent 9px, $mn-colorscheme-1M 0) top left;
  background-repeat: no-repeat;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  overflow:hidden;
}

//generic modifier styles

// fix for inset shadow bug of the table-containing div, to be uniform on striped rows, because shadow is not visible on opaque background
.table-striped > tbody > tr:nth-child(odd) > td {
  background-color: rgba(#999, .1);
}

.table > thead > tr > th, .table > thead > tr > td,
.table > tbody > tr > th, .table > tbody > tr > td,
.table > tfoot > tr > th, .table > tfoot > tr > td {
  padding: 4px 4px;
}

.table > thead > tr > th {
  font-weight: 500 !important;
  font-size:$font-size-base - 1;
  border-color: #ACF3BC !important;
  border-top: 1px solid #fff !important;
}

.thirdWidth {
  width: 33%;
}

.spacerT15 {
  margin-top: 15px;
}

.baseFont3x {
  font-size:$font-size-base * 3;
}

.noPad {
  padding:0 !important;
}

.vmiddle {
  vertical-align: middle !important;
}

.accent {
  color:$mn-colorscheme-1A !important;
}

.accent0 {
  color:$mn-colorscheme-0A !important;
}

.disabled input[type='text']
{
    color: $mn-disabled-L !important;
    cursor: not-allowed !important;
    border-color: $mn-disabled-D !important;
}

.disabled .multiSelect button {
  box-shadow: 2px 2px $mn-disabled-D;
  -webkit-box-shadow: 2px 2px $mn-disabled-D;
  -moz-box-shadow: 2px 2px $mn-disabled-D;
}
