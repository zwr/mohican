// mixins

// basic bootstrap "buttonizer" for overrinding existing vendor component style
@mixin bs-btnize($variant) {
  @extend .btn;
  @extend .btn-#{$variant};
}

// reseting positioning & box model for isteven-multi-select existing vendor component style
@mixin multi-select-reset-pbm($pad,$lmargin) {
  padding: $pad + px ($pad * 4) + px $pad + px ($pad * 4) + px; // compensate for the inner .multiSelect .buttonLabel padding
  margin-left: $lmargin + px;
}

/* realign the bootstrap menu */
@media(max-width: $grid-float-breakpoint - 1) {
  .navbar-text {
    margin-top: 10px;
  }
  .navbar-toggle {
    margin-left: 16px;
  }
  .navbar-nav {
    margin-top: 5px;
    margin-bottom: 0px;
  }
}

.navbar { _margin-bottom: 0px;}

/* hide title on very small screens, menu is more important to show */
@media(max-width: $app-hide-title) {
  .mn-navbar-title > a {
    display: none;
    img {
      display: none;
    }
  }
}

