.container-fluid
  .row
    .col-xs-9
      %mn-filter-bar
        %mn-fb-document-filter-selector
        %mn-fb-date-selector(field='delivery_date'
                             label='Delivery Date')
        %mn-fb-multi-selector(field='status'
                              label='Status'
                              values='created,avoinna,valmis,deferred,tuotannossa,delivered')
    .col-xs-3
      %a.btn.btn-primary(href='#/orders/new') New Order
      %a.btn(href='#/orders') Orders
  .mn-grid-layout-row.row
    .col-xs-12(style='position: static;')
      %mnf-form-grid
        %mn-grid(mn-actions-width='140px'
                 mn-fast-preview='row'
                 mn-grid-fill-height='true'
                 mn-on-select='ctrl.onItemSelect(selectedItems)'
                 mn-popup='ctrl.popup(clickedItem, selectedItems)'
                 mn-select='multiple'
                 mn-select-type='check')
          %mnf-preview-grid.hidden-xs(mnf-doc='item' route='orders')
          %mnf-edit-grid.hidden-xs(mnf-doc='item')
          %mnf-commit-grid.hidden-xs(mnf-doc='item')
          %mnf-rollback-grid.hidden-xs(mnf-doc='item')
          %mnf-delete-grid.hidden-xs(mn-on-delete='ctrl.loadMnGridItems()' mnf-doc='item')
