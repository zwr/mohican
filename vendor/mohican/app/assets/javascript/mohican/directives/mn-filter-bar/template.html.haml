.row
  .col-xs-12.btn-toolbar
    %button.btn(type="button"
                    ng-click="isCollapsed = !isCollapsed")
      Toggle collapse
    .btn.primary(button-label="show" helper-elements=""
                       input-model="filterBar.owner.layouts" isteven-multi-select=""
                       item-label="name desc" ng-show="filterBar.owner.layouts.length > 1"
                       on-item-click="filterBar.changeLayout(data.name)"
                       selection-mode="single" tick-property="selected")
    %button.btn(ng-class="{'btn-primary': filterBar.owner.stateMachine.quickFilterShown}"
                ng-click="filterBar.owner.toggleQuickFilter()"
                ng-disabled="!filterBar.owner.fullyLoaded"
                type="button")
      %span.pull-left Quick Filter
      %span.loader.pull-left(ng-show="!filterBar.owner.fullyLoaded"
                             style="margin: 0px 0px 0px 8px;")
    %a.btn.btn-primary.pull-right(href='#/orders/new') New Order
%div(uib-collapse="isCollapsed")
  .well.well-lg
    .row
      .col-xs-12.btn-toolbar
        %form.form-inline
          .row
            .col-xs-12.mn-translude
          .row
            .col-xs-12
              %button.btn.btn-primary(ng-click="filterBar.changeDocumentFilter()") Change
